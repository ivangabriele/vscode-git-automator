{
  "extends": "@ivangabriele/tsconfig-node",
  "compilerOptions": {
    "inlineSources": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "module": "es2015",
    "outDir": "./out",
    "preserveConstEnums": true,
    "skipDefaultLibCheck": true,
    "rootDir": "./src",
    "sourceMap": true,
    "target": "es2015"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*", "./out/**/*"]
}
